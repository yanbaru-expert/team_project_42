<% if movie.watched_by?(current_user) %>
  <%= link_to '視聴済みを解除', movie_watches_path(movie), class: 'btn btn-primary btn-block', method: :delete, remote: true %>
<% else %>
  <%= link_to '視聴済みにする', movie_watches_path(movie), class: 'btn btn-secondary btn-block', method: :post, remote: true %>
<% end %>
